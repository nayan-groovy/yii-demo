{
	"name": "coderedfour/yimin",
	"description": "Yii 2 Advanced Application Template",
	"keywords": ["yii2", "framework", "advanced", "application template"],
	"homepage": "http://www.coderedfour.com/",
	"type": "project",
	"license": "BSD-3-Clause",
	"support": {
		"issues": "https://github.com/coderedfour/yimin/issues?state=open",
		"forum": "http://www.coderedfour.com/forum/",
		"wiki": "http://coderedfour.wikispaces.com/",
		"irc": "irc://irc.freenode.net/yii",
		"source": "https://github.com/yiisoft/yii2"
	},
	"minimum-stability": "dev",
	"require": {
		"php": ">=5.4.0",
		"yiisoft/yii2": "dev-master#d7a21d1",
		"yiisoft/yii2-bootstrap": "*",
		"yiisoft/yii2-swiftmailer": "*"
	},
	"require-dev": {
		"yiisoft/yii2-codeception": "*",
		"yiisoft/yii2-debug": "*",
		"yiisoft/yii2-gii": "*",
		"codeception/codeception": "1.8.*",
		"codeception/specify" : "*",
		"codeception/verify": "*",
		"behat/mink-selenium2-driver":  "*@stable",
		"kartik-v/yii2-markdown": "*",
		"kartik-v/yii2-password": "*",		
		"kartik-v/yii2-widgets": "dev-master",
		"kop/yii2-conditional-validator": "*",
		"zelenin/yii-sms_ru": "dev-master",
		"zelenin/yii2-sms_ru": "dev-master"

	},
	"suggest": {
		"codeception/codeception": "Codeception, 1.8.*@dev is currently works well with Yii.",
		"codeception/specify": "BDD style code blocks for PHPUnit and Codeception",
		"codeception/verify": "BDD Assertions for PHPUnit and Codeception",
		"yiisoft/yii2-faker": "Fixtures generator for Yii2 based on Faker lib"
	},
	"scripts": {
		"post-create-project-cmd": [
			"yii\\composer\\Installer::setPermission"
		]
	},
	"config": {
		"process-timeout": 1800
	},
	"extra": {
		"writable": [
			"backend/runtime",
			"backend/web/assets",

			"console/runtime",
			"console/migrations",

			"frontend/runtime",
			"frontend/web/assets"
		]
	}
}
